# PharmaGuard Environment Variables
# Copy this to .env and fill in your keys

# ── LLM API Keys (get at least one) ──────────────────────────────────────────
# Google Gemini (FREE: 1500 req/day) → https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here

# Groq (FREE: 14400 req/day, ultra fast) → https://console.groq.com
GROQ_API_KEY=your_groq_key_here

# ── Frontend ──────────────────────────────────────────────────────────────────
# URL of your FastAPI backend (change for production)
REACT_APP_API_URL=http://localhost:8000

# ── Optional ──────────────────────────────────────────────────────────────────
# OpenRouter (backup) → https://openrouter.ai
# OPENROUTER_API_KEY=your_key_here

